  gem "reek", "~> 4.5", require: false
  gem "rubocop", "~> 0.45", require: false
  gem "rails_best_practices", require: false
  gem "scss_lint", require: false
end

group :development do
  gem "listen"
  gem "pragmater"
  gem "tocer", "~> 3.2"
  gem "milestoner"
end

group :test do
